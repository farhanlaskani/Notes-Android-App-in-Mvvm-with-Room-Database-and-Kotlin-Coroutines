<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/dim_15"
    app:cardElevation="@dimen/dim_10"
    android:layout_margin="@dimen/dim_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#3D3838"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:padding="@dimen/dim_10"
            android:id="@+id/rv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="#E6D4D4"
            android:textSize="@dimen/textsize_20" />

        <TextView
            android:id="@+id/rv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:padding="@dimen/dim_10"
            android:text="30 may 2021"
            android:textColor="#E6D4D4"
            android:textSize="@dimen/textsize_16" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/rvdelete"
            android:contentDescription="@string/delete"
            app:tint="@color/red"
            android:layout_marginEnd="@dimen/dim_10"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_width="70dp"
            android:layout_height="@dimen/dim_70"
            android:src="@drawable/baseline_delete_forever_24"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>